{
  "name": "Deno Development Environment",
  "image": "denoland/deno:2.0.3",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  // Forward Deno's default port for development server
//  "forwardPorts": [8000],

  // Install dependencies and configure git
  "postCreateCommand": "deno upgrade && git config --global pull.rebase true",

  // Configure IDE settings
  "customizations": {
    "jetbrains": {
      "backend": "IntelliJ"
    },
    "vscode": {
      "extensions": [
        "denoland.vscode-deno"
      ],
      "settings": {
        "deno.enable": true,
        "deno.lint": true,
        "deno.unstable": false
      }
    }
  },

  // Mount local SSH keys into container
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,type=bind,consistency=cached"
  ],

  // Use root user to avoid permission issues
  "remoteUser": "root",

  // Environment variables
  "containerEnv": {
    "DENO_DIR": "/root/.cache/deno"
  }
}